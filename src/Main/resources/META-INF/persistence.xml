<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence
             https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">

    <persistence-unit name="HealthFitnessClubPU" transaction-type="RESOURCE_LOCAL">

        <!-- List all your entity classes -->
        <class>COMP3005_FinalP.MEMBER</class>
        <class>COMP3005_FinalP.Trainer</class>
        <class>COMP3005_FinalP.ROOM</class>
        <class>COMP3005_FinalP.EQUIPMENT</class>
        <class>COMP3005_FinalP.FITNESS_GOAL</class>
        <class>COMP3005_FinalP.HEALTH_METRIC</class>
        <class>COMP3005_FinalP.PT_Session</class>
        <class>COMP3005_FinalP.GROUP_CLASS</class>
        <class>COMP3005_FinalP.CLASS_ENROLLMENT</class>
        <class>COMP3005_FinalP.Trainer_Availability</class>

        <properties>
            <!-- Database connection settings -->
            <property name="jakarta.persistence.jdbc.url"
                      value="jdbc:postgresql://localhost:5433/health_fitness_club"/>
            <property name="jakarta.persistence.jdbc.user" value="postgres"/>
            <property name="jakarta.persistence.jdbc.password" value="XXXXXXXX"/>
            <property name="jakarta.persistence.jdbc.driver"
                      value="org.postgresql.Driver"/>

            <!-- Hibernate settings -->
            <property name="hibernate.dialect"
                      value="org.hibernate.dialect.PostgreSQLDialect"/>

            <!-- Auto-create tables on first run -->
            <property name="hibernate.hbm2ddl.auto" value="create"/>

            <!-- Show SQL in console (helpful for debugging) -->
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
        </properties>
    </persistence-unit>
</persistence>